<div
  class="resource-item"
  style="background: url('<%= url_for resource.image.variant(:thumb) %>');background-size: cover;"
>
  <a href="<%= resource_url resource %>" class="resource-item_link">
    <div class="resource-item_bg"></div>
    <div class="resource-item_title">
      <%= resource.name %>
    </div>

    <div class="resource-item_info-box">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
      ><path
          fill="currentColor"
          d="M16.813 4.419A1 1 0 0 0 16 4H3a1 1 0 0 0-.813 1.581L6.771 12l-4.585 6.419A1 1 0 0 0 3 20h13a1 1 0 0 0 .813-.419l5-7a1 1 0 0 0 0-1.162zM15.485 18H4.943l3.87-5.419a1 1 0 0 0 0-1.162L4.943 6h10.542l4.286 6z"
        /></svg>
      <span class="resource-item_info">
        <%= resource.category.name.titleize %>
      </span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        style="margin-left: auto"
      ><path
          fill="currentColor"
          d="M21 4H3a1 1 0 0 0-1 1v14a1 1 0 0 0 1 1h18a1 1 0 0 0 1-1V5a1 1 0 0 0-1-1m-1 11a3 3 0 0 0-3 3H7a3 3 0 0 0-3-3V9a3 3 0 0 0 3-3h10a3 3 0 0 0 3 3z"
        /><path
          fill="currentColor"
          d="M12 8c-2.206 0-4 1.794-4 4s1.794 4 4 4s4-1.794 4-4s-1.794-4-4-4m0 6c-1.103 0-2-.897-2-2s.897-2 2-2s2 .897 2 2s-.897 2-2 2"
        /></svg>
      <span class="resource-item_info">
        <% if resource.price > 0 %>
          <%= "#{resource.price} XOF" %>
        <% else %>
          <%= t("resources.price.free") %>
        <% end %>
      </span>
    </div>
  </a>
</div>
