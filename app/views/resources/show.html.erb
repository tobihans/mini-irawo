<h2><%= @resource.name %></h2>
<%= image_tag @resource.image, style: "width: 100%; max-height: 100%; height: auto;" %>

<!-- TODO: Add buy form -->
<div class="my-2">
  <% @resource.description.split("\n").each do |line| %>
    <p><%= line %></p>
  <% end %>
</div>
<div>
  <h3><%= t("resources.similar") %></h3>

  <div class="resources-container">
    <%= render Resource
      .order(created_at: :desc)
      .where(category: @resource.category)
      .where.not(id: @resource.id)
      .limit(3) %>
    <%= link_to t("resources.view_all"), root_path, class: "ml-1" %>
  </div>
</div>
