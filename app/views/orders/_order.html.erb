<li>
  <h3 class="small mt-0 mb-.25"><%= "##{order.id}" %>
    <%= order.resource.name %>
    (<%= link_to t("resources.link"),
    resource_path(order.resource),
    class: "smaller",
    target: "_blank" %>)
  </h3>

  <div>
    <% truncate(order.resource.description, length: 100, omission: '...').split("\n").each do |par| %>
      <p><%= par %></p>
    <% end %>
    <button>
      <%= link_to t("orders.get_access"),
      order_path(order, get: "yes"),
      target: "_blank",
      rel: "nofollow" %>
    </button>
  </div>
