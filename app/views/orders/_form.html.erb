<%= form_with model: order, class: "order-form" do |form| %>

  <% if order.errors.any? %>
    <%= tag.div(order.errors.full_messages.join(", "), class: "flash severe small") %>
  <% end %>

  <%= form.collection_select :resource_id,
                         Resource.where(id: order.resource.id),
                         :id,
                         :name %>
  <%= form.submit (
                if order.resource.price == 0
                  t("forms.get")
                else
                  "#{t("forms.buy")} #{order.resource.price} XOF"
                end
              ),
              class: "order-cta" %>
<% end %>
